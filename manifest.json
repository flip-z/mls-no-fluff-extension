{
    "manifest_version": 3,
    "name": "MLS No Fluff Modifier",
    "version": "1.0",
    "description": "Modify description text for MLS listings on popular real estate websites.",
    "permissions": [
                    "activeTab",
                    "scripting"
                ],
    "host_permissions": [
      "https://*.redfin.com/*",
      "https://redfin.com/*",
      "https://*.zillow.com/*",
      "https://zillow.com/*",
      "https://*.realtor.com/*",
      "https://realtor.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://*.redfin.com/*",
          "https://redfin.com/*",
          "https://*.zillow.com/*",
          "https://zillow.com/*",
          "https://*.realtor.com/*",
          "https://realtor.com/*"
        ],
        "js": ["content.js"]
      }
    ]
  }
  